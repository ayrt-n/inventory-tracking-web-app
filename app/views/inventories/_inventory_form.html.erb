<%= form_with model: @inventory do |form| %>
  <div class="field">
    <%= form.label :sku, class: "label" %>
    <div class="control">
      <%= form.text_field :sku, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= form.label :name, class: "label" %>
    <div class="control">
      <%= form.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= form.label :stock, class: "label" %>
    <div class="control">
      <%= form.number_field :stock, class: "input" %>
    </div>
  </div>
  <%= form.submit class: "button is-primary" %>
<% end %>