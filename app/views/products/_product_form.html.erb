<%= form_with model: @product do |form| %>
  <% if @product.errors.any? %>
    <%= render 'shared/error_message', object: @product %>
  <% end %>
  <div class="field">
    <%= form.label :sku, class: "label" %>
    <div class="control">
      <%= form.text_field :sku, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= form.label :name, class: "label" %>
    <div class="control">
      <%= form.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= form.label :price, class: "label" %>
    <div class="control">
      <%= form.number_field :price, class: "input", step: 0.01 %>
    </div>
  </div>
  <div class="field">
    <%= form.label :quantity, class: "label" %>
    <div class="control">
      <%= form.number_field :quantity, class: "input" %>
    </div>
  </div>
  <%= form.submit class: "button is-primary" %>
<% end %>